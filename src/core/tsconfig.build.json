{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "../../lib/core/",
    "rootDir": ".",
    "paths": {
      "elumian/core": [
        "../"
      ],
      "elumian/core/*": [
        "../*"
      ],
      "elumian/common": [
        "../common"
      ],
      "elumian/common/*": [
        "../common/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*",
    "*.spec.ts"
  ],
  "references": [
    {
      "path": "../common/tsconfig.build.json"
    }
  ]
}
